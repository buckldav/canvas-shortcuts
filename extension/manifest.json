{
  "description": "Helpful shortcuts for Canvas SpeedGrader.",
  "manifest_version": 3,
  "name": "Canvas Shortcuts",
  "version": "1.4",
  "homepage_url": "https://github.com/buckldav/canvas-shortcuts/tree/master/extension",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.instructure.com/*"],
      "js": ["canvas-shortcuts.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Canvas Shortcuts",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab"
  ]
}

